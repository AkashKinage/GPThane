    <ImageView
        android:layout_height="150dp"
        android:layout_width="300dp"
        android:src="@drawable/gpt_logo"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:letterSpacing="0.03"
        android:textStyle="bold"
        android:textSize="35dp"
        android:textColor="#0d6e6a"
        android:text="Register"/>

    <EditText
        android:id="@+id/etTeacherName"
        android:layout_height="45dp"
        android:layout_width="350dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColorHint="#0d6e6a"
        android:hint="Name"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/forget"/>

    <EditText
        android:id="@+id/etTeacherPhoneNo"
        android:layout_height="45dp"
        android:layout_width="350dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColorHint="#0d6e6a"
        android:hint="Phone Number"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/forget"/>

    <EditText
        android:id="@+id/etTeacherEmail"
        android:layout_height="45dp"
        android:layout_width="350dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColorHint="#0d6e6a"
        android:hint="Email"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/forget"/>

    <EditText
        android:id="@+id/etPassword"
        android:layout_height="45dp"
        android:layout_width="350dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColorHint="#0d6e6a"
        android:hint="Password"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/forget"/>

    <EditText
        android:id="@+id/etTeacherUniqueId"
        android:layout_height="45dp"
        android:layout_width="350dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColorHint="#0d6e6a"
        android:hint="Unique ID"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/forget"/>

    <Button
        android:id="@+id/btnTeacherRegister"
        android:layout_height="50dp"
        android:layout_width="350dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#FFF"
        android:text="Register"
        android:layout_marginTop="25dp"
        android:background="@drawable/button"/>

    <TextView
        android:id="@+id/tvTeacherLogin"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#0d6e6a"
        android:text="Already have an account? Sign In"
        android:layout_marginTop="15dp"/>

</LinearLayout>